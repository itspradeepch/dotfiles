# Calculates the gzip compression of a file
function gzipsize(){
 	echo $((`gzip -c $1 | wc -c`/1024))"KB"
}

# Find files and ignore directories
function ff(){
   find . -iname $1 | grep -v .svn | grep -v .sass-cache
}

